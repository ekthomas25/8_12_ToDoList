@using ToDoList.Models;

<h1>To Do List</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Item item in Model) // Loop through each item of type Item in Model. We need the using directive so we can declare that item is of type Item.
  {
  <li>@Model.Description</li>
  }

</ul>
<a href="/items/new">Add a new item!</a> <!-- navigates to a /items/new route where users can create new Items using a form.-->